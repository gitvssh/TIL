db작업

create database spring;
use spring;

create table item(
item_id int(5) auto_increment,
item_name varchar(20),
price int(6),
description varchar(50),
picture_url varchar(20),
primary key(item_id)
);


csv파일 작업(,로 구분되는 데이터)

load data local infile 'c:\\_shop\\item.csv' into table item
fields terminated by ','
lines terminated by '\r\n';

